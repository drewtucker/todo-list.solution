@using ToDoListApp.Models;
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
  </head>
  <body>
    <h1>To Do List</h1>
      @if(Model != null)
      {
        <h2>@Model.GetDescription()</h2>
      }
    <a href="/items/new">Add a new item.</a>

    <form action="/items/delete" method="post">
    <button type="submit" name="button">Clear All Items</button>
    </form>
  </body>
</html>
